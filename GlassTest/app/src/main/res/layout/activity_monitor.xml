<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/glass_card_margin"
    tools:context=".MonitorActivity">

    <com.github.mikephil.charting.charts.BarChart
        android:id="@+id/activity_monitor_barchart"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/color_back"
        android:padding="10dp"
        android:layout_margin="4dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@id/activity_monitor_barchart2"
        />


    <com.github.mikephil.charting.charts.BarChart
        android:id="@+id/activity_monitor_barchart2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/color_back"
        android:padding="10dp"
        android:layout_margin="4dp"
        app:layout_constraintLeft_toRightOf="@+id/activity_monitor_barchart"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>